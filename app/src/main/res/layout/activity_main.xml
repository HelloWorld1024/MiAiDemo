<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/test_asr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_asr"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/test_nlp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/test_nlp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/test_tts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/test_tts"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"

        />
    <TextView
        android:id="@+id/test_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:hint="@string/test_result"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />

    <ImageButton
        android:id="@+id/test_all"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:src="@drawable/ic_voice_button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        />


</LinearLayout>